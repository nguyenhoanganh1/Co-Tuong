<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div id="app">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12 col-sm-12">
                <label>Room Name: </label>
                <input type="text" id="room" name="room" v-model="room" />
                <button v-on:click="createRoom">Tạo phòng</button>
                <button v-on:click="getAllRoom">Xem danh sách phòng chơi</button>
            </div>
        </div>
        <div class="row">
            <div v-for="item in rooms" v-if="item !== null" :id="item.id" class="chessnode" v-bind:style="{ display: item.visible, top: item.top + 'px', left: item.left + 'px'}">
                <div class="col-md-3" :id="item.Id">
                    <a :href="'/cotuong?id=' + item.Id">
                        <img src="~/Content/images/table-0.png" title="Room" height="100px" width="100px" />
                    </a>
                    <p>{{item.Name}}</p>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    var app = new Vue({
        el: '#app',
        data: {
            total: 0,
            room: '',
            userName: '',
            rooms: []
        },
        methods: {
            createRoom() {
                app.getAllRoom();
                var payload = { RoomName: this.room };
                axios
                    .post('/api/chess/insertroom', payload)
                    .then(response => {
                        console.log(response.data.room);
                    })
                    .catch(error => {
                        console.log(error)
                    })
                    .finally()
            },
            getAllRoom: function () {
                axios
                    .get('/api/chess/getrooms')
                    .then(response => {
                        console.log(response.data.data);
                        this.rooms = response.data.data;
                    })
                    .catch(error => {
                        console.log(error)
                    })
                    .finally()
            }
        }
    })
</script>